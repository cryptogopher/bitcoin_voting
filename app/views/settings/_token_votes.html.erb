<p>
  <%= label_tag :settings_default_token, 'Default token' %>
  <%= select_tag 'settings[default_token]',
    options_for_select(TokenVote.tokens.keys, @settings['default_token']) %>
</p>
</div>

<fieldset class="box settings">
<legend>Checkpoints</legend>
  <%= render partial: 'settings/checkpoints' %>
</fieldset>

<fieldset class="box tabular settings">
<legend>BTC</legend>
  <p>
    <%= label_tag :settings_btc_rpc_uri, 'RPC URI' %>
    <%= text_field_tag 'settings[BTC][rpc_uri]', @settings['BTC']['rpc_uri'], size: 64 %>
    <em class="info">
      <%= l(:label_default) %>: <%= @plugin.settings[:default][:BTC][:rpc_uri] %>
    </em>
  </p>
  <p>
    <%= label_tag :settings_btc_min_conf, 'Minimum confirmations' %>
    <%= number_field_tag 'settings[BTC][min_conf]', @settings['BTC']['min_conf'],
      min: 1, size: 2 %>
    <em class="info">
      <%= l(:label_default) %>: <%= @plugin.settings[:default][:BTC][:min_conf] %>
    </em>
  </p>
</fieldset>

