<% if @issue.token_votes.present? %>
  <table class="list">
    <% @issue.token_votes.each do |token_vote| %>
      <% if token_vote.visible? %>
        <tr id="token_vote-<%= token_vote.id %>">
          <td class="token"><%= token_vote.token %></td>
          <td class="address" style="width: 50%"><%= token_vote.address %></td>
          <td class="expiration"><%= format_date(token_vote.expiration) %></td>
          <td class="amount"><%= token_vote.amount %></td>
          <td class="buttons">
            <% if token_vote.deletable? %>
              <%= link_to_if_authorized image_tag('link_break.png'),
                {controller: 'token_votes', action: 'destroy', id: token_vote},
                {method: :delete, remote: true} %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
<% end %>
